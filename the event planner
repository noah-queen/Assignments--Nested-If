attendees = int (input("Enter number of attendees: "))
venue = "large hall" if attendees > 100 else "conference room"
print(venue)

#task 2
attendees = int (input("Enter number of attendees: "))
venue = "large hall" if attendees > 100 else "conference room"
print(venue) 
theme = input("whats the theme, a party or a class?")
if theme == "a party": print("get an audio system!")
elif theme == "a class": print("get a projector")

